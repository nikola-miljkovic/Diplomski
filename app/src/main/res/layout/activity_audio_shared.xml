<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     tools:context="com.mndev.diplomski.AudioSharedActivity"
     android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_newts_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="15dp"
                android:text="T'"
                android:textAlignment="center"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/tv_newts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_delta_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="Δt"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_delta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_emit_delay_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="ϕ"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_emit_delay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_delay_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="τ"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_delay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_interval_avg_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="I"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_interval_avg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_iteration_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="n"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_iteration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_actualts_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="TS"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_actualts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_shared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"/>

        <SurfaceView
            android:id="@+id/audio_surface"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
